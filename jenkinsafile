pipeline {
  agent any
    tools {
      git 'git'
      maven 'maven'
    }
  stages {
    stage('Source code') {
      steps {
       git 'https://github.com/Vemana-dev/flipamazon-vijay.git'
      }
    } 
    stage('Maven Build') {
      steps {
      bat 'mvn clean install'
      }
    }
    stage('Send Email') {
      steps {
      emailext body: 'happy to receive %env.JOB_NAME% %env.BUILD_NUMBER%', compressLog: true, recipientProviders: [developers()], subject: '%env.JOB_NAME% %env.BUILD_NUMBER%', to: 'vemanavijaykumar154@gmail,vemanav@gmail.com',from:'vemanavijaykumar154@gmail.com'
      }           
    }
  }
}
